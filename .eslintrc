{
  "root": true,
  "env": {
    "node": true
  },
  "plugins": ["eslint-plugin-tsdoc"],
  "extends": [
    "plugin:vue/recommended",
    "eslint:recommended",
    "@vue/typescript/recommended",
    "@vue/prettier",
    "@vue/prettier/@typescript-eslint",
    "plugin:vue-i18n/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "@typescript-eslint/member-delimiter-style": [
      "error",
      {
        "multiline": {
          "delimiter": "none",
          "requireLast": false
        },
        "singleline": {
          "delimiter": "comma",
          "requireLast": false
        }
      }
    ],
    "tsdoc/syntax": "warn",
    "vue-i18n/no-dynamic-keys": "warn",
    "vue-i18n/no-raw-text": [
      "warn",
      {
        "ignoreNodes": ["v-icon"],
        "ignorePattern": "^[-#:()& ]+$"
      }
    ]
  },
  "settings": {
    "vue-i18n": {
      "localeDir": "./locales/*.json"
    }
  },
  "overrides": [
    {
      "files": ["tests/unit/**/*.spec.ts"],
      "env": {
        "jest": true
      }
    }
  ]
}
